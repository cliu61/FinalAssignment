
@{
    ViewBag.Title = "AddRoleToUser";
}

<h2>AddRoleToUser</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label class="control-label col-md-2">Email</label>
        <div class="col-md-10">
            @Html.DropDownList("Email", (IEnumerable<SelectListItem>)ViewBag.Users, "Select...", htmlAttributes: new { @class = "form-control col-md-10" })
        </div>      
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Role Type</label>
        <div class="col-md-10">
            @Html.DropDownList("Role", (IEnumerable<SelectListItem>)ViewBag.Roles, "Select...", htmlAttributes: new { @class = "form-control col-md-10" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Add to user" class="btn btn-default" />
        </div>
    </div>
}
